
.popup
	
	background #ffffff
	color #404040
	border-radius 10px
	padding 20px
	padding-block-start 30px
	min-width calc(min(80vw, 300px))
	max-width calc(min(80vw, 800px))
	
	use-flex column
	gap 20px
	
	> .title
	> .message
		margin-inline 18px
	
	> .title
		padding-inline-start 0.8em
		font-sw 20px bold
	
	> .message
		font-size 15px
	
	> .buttons
		
		use-flex row-reverse
		gap 10px
		padding-top 20px
		
	
