
.popup
	
	background #ffffff
	color #404040
	border-radius 10px
	padding 20px
	padding-block-start 30px
	min-width calc(min(80vw, 300px))
	max-width calc(min(80vw, 800px))
	
	use-flex column
	gap 20px
	
	> .title
	> .message
		margin-inline 18px
	
	> .title
		padding-inline-start 0.8em
		font-sw 20px bold
	
	> .message
		font-size 15px
	
	> .buttons
		
		gap 10px
		padding-top 20px
		
		&.type-off
			display none
		&.type-align-right
			use-flex row
			justify-content flex-end
		&.type-center
			use-flex-center column
			> button
				width 80%
				max-width 320px
		
	
