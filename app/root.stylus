html, body
	clear-pad()
	min-size 100%
	overflow hidden

body
	font-family 'Alibaba Puhuiti', 'Helvetica Neue', sans-serif
	font-size 16px

code
	background #bdbdbd54
	font-size 0.8em
	padding 0.2em 0.4em
	border-radius 0.2em
	&:has(pre)
		display block
		border-radius 0.4em
		padding 0.6em 0.9em
	> pre
		white-space pre-wrap
		clear-pad()
